<%= link_to story, class: "card overflow-hidden group" do %>
  <div class="aspect-[3/4] bg-gradient-to-br from-indigo-500 to-purple-600 relative">
    <% if story.cover_image.present? %>
      <%= image_tag story.cover_image, class: "w-full h-full object-cover" %>
    <% else %>
      <div class="flex items-center justify-center h-full text-white text-4xl font-bold">
        <%= story.title.first %>
      </div>
    <% end %>
    <div class="absolute top-2 right-2 bg-black bg-opacity-50 text-white px-2 py-1 rounded text-xs">
      <%= story.status.titleize %>
    </div>
  </div>

  <div class="p-4">
    <h3 class="font-bold text-lg text-gray-900 mb-2 line-clamp-2 group-hover:text-primary transition">
      <%= story.title %>
    </h3>

    <p class="text-sm text-gray-600 mb-3">
      by <%= story.author_name %>
    </p>

    <p class="text-sm text-gray-700 line-clamp-2 mb-3">
      <%= story.description %>
    </p>

    <div class="flex items-center justify-between text-xs text-gray-500">
      <div class="flex space-x-3">
        <span>ğŸ‘ <%= story.views_count %></span>
        <span>â¤ï¸ <%= story.likes_count %></span>
        <span>ğŸ’¬ <%= story.comments_count %></span>
      </div>
      <span><%= story.chapters.count %> chapters</span>
    </div>

    <% if story.genres.any? %>
      <div class="flex flex-wrap gap-2 mt-3">
        <% story.genres.first(3).each do |genre| %>
          <span class="text-xs bg-indigo-100 text-indigo-700 px-2 py-1 rounded">
            <%= genre.name %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>