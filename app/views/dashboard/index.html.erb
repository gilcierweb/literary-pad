<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">Dashboard</h1>
    <p class="text-gray-600">Manage your stories and track your progress</p>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="card p-6">
      <div class="text-3xl font-bold text-primary mb-2"><%= @stats[:stories_count] %></div>
      <div class="text-gray-600">Stories</div>
    </div>
    <div class="card p-6">
      <div class="text-3xl font-bold text-primary mb-2"><%= @stats[:total_views] %></div>
      <div class="text-gray-600">Total Views</div>
    </div>
    <div class="card p-6">
      <div class="text-3xl font-bold text-primary mb-2"><%= @stats[:total_likes] %></div>
      <div class="text-gray-600">Total Likes</div>
    </div>
    <div class="card p-6">
      <div class="text-3xl font-bold text-primary mb-2"><%= @stats[:followers_count] %></div>
      <div class="text-gray-600">Followers</div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- My Stories -->
    <div class="lg:col-span-2">
      <div class="card p-6">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-gray-900">My Stories</h2>
          <%= link_to "Create New Story", new_story_path, class: "btn-primary" %>
        </div>

        <% if @my_stories.any? %>
          <div class="space-y-4">
            <% @my_stories.each do |story| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:border-primary transition">
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <%= link_to story, class: "block group" do %>
                      <h3 class="font-bold text-lg text-gray-900 group-hover:text-primary mb-1">
                        <%= story.title %>
                      </h3>
                    <% end %>
                    <p class="text-sm text-gray-600 mb-2"><%= truncate(story.description, length: 100) %></p>

                    <div class="flex items-center space-x-4 text-xs text-gray-500">
                      <span class="px-2 py-1 bg-gray-100 rounded"><%= story.status.titleize %></span>
                      <span>üëÅ <%= story.views_count %></span>
                      <span>‚ù§Ô∏è <%= story.likes_count %></span>
                      <span>üí¨ <%= story.comments_count %></span>
                      <span><%= story.chapters.count %> chapters</span>
                    </div>
                  </div>

                  <div class="ml-4 flex space-x-2">
                    <%= link_to "Edit", edit_story_path(story), class: "text-sm text-primary hover:text-primary-dark" %>
                    <%= link_to new_story_chapter_path(story), class: "text-sm text-green-600 hover:text-green-700" do %>
                      Add Chapter
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 mb-4">You haven't created any stories yet.</p>
            <%= link_to "Create Your First Story", new_story_path, class: "btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Reading History -->
      <div class="card p-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Continue Reading</h3>
        <% if @reading_history.any? %>
          <div class="space-y-3">
            <% @reading_history.first(5).each do |reading| %>
              <%= link_to story_chapter_path(reading.chapter.story, reading.chapter), class: "block p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition" do %>
                <h4 class="font-semibold text-sm text-gray-900 line-clamp-1">
                  <%= reading.chapter.story.title %>
                </h4>
                <p class="text-xs text-gray-600 mt-1">
                  Chapter <%= reading.chapter.position %>: <%= reading.chapter.title %>
                </p>
                <div class="mt-2 bg-gray-200 rounded-full h-1.5">
                  <div class="bg-primary h-1.5 rounded-full" style="width: <%= reading.progress %>%"></div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">No reading history yet.</p>
        <% end %>
      </div>

      <!-- Favorites -->
      <div class="card p-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4">My Favorites</h3>
        <% if @favorites.any? %>
          <div class="space-y-3">
            <% @favorites.each do |story| %>
              <%= link_to story, class: "block p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition" do %>
                <h4 class="font-semibold text-sm text-gray-900 line-clamp-2">
                  <%= story.title %>
                </h4>
                <p class="text-xs text-gray-600 mt-1">
                  by <%= story.author_name %>
                </p>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">No favorites yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>