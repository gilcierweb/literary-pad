<div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="text-center">
      <h1 class="text-5xl font-bold mb-6">Discover Amazing Stories</h1>
      <p class="text-xl mb-8 text-indigo-100">Read, write, and share your stories with a community of passionate readers</p>
      <div class="flex justify-center space-x-4">
        <%= link_to "Start Reading", discover_index_path, class: "bg-white text-indigo-600 px-8 py-3 rounded-lg font-semibold hover:bg-indigo-50 transition" %>
        <%= link_to "Start Writing", new_story_path, class: "bg-indigo-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-800 transition border-2 border-white" %>
      </div>
    </div>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <!-- Featured Stories -->
  <section class="mb-16">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900">Featured Stories</h2>
      <%= link_to "View All →", stories_path, class: "text-primary hover:text-primary-dark font-semibold" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @featured_stories.each do |story| %>
        <%= render "stories/card", story: story %>
      <% end %>
    </div>
  </section>

  <!-- Popular Genres -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Browse by Genre</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% @popular_genres.each do |genre| %>
        <%= link_to discover_path(genre_id: genre.id), class: "card p-6 text-center hover:scale-105 transition transform" do %>
          <h3 class="font-semibold text-gray-900"><%= genre.name %></h3>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Recent Stories -->
  <section>
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900">Recently Published</h2>
      <%= link_to "View All →", stories_path, class: "text-primary hover:text-primary-dark font-semibold" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @recent_stories.each do |story| %>
        <%= render "stories/card", story: story %>
      <% end %>
    </div>
  </section>
</div>